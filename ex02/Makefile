CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++17

TARGET = formsformsforms

SRCS = $(wildcard *.cpp)

OBJS = $(SRCS:.cpp=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS)

%.o: %.cpp	
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(TARGET) $(OBJS) $(wildcard *_shrubbery)

re: clean all

.PHONY: all clean re